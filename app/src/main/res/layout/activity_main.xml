<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FAF7F2">

        <androidx.viewpager.widget.ViewPager
            android:id="@+id/viewpager"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/bottomBarLayout"
            android:padding="10dp" />

        <RelativeLayout
            android:id="@+id/bottomBarLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="#FAF7F2"
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                android:layout_marginBottom="6dp">

                <ImageView
                    android:id="@+id/bottomBarButton1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:contentDescription=""
                    android:onClick="onClick"
                    android:scaleType="centerInside"
                    android:src="@drawable/buttom_tab_selector_chart" />

                <ImageView
                    android:id="@+id/bottomBarButton2"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:contentDescription=""
                    android:onClick="onClick"
                    android:scaleType="centerInside"
                    android:src="@drawable/buttom_tab_selector_month" />

                <ImageView
                    android:id="@+id/bottomBarButton3"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:contentDescription=""
                    android:onClick="onClick"
                    android:scaleType="centerInside"
                    android:src="@drawable/buttom_tab_selector_list" />


            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="3px"
                android:background="@android:color/black" />
        </RelativeLayout>
    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>