<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="30dp"
    android:background="#FAF7F2">

    <RelativeLayout
        android:layout_width="302dp"
        android:layout_height="293dp"
        android:layout_marginTop="140dp"
        android:layout_marginBottom="165dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginTop="0dp"
            android:visibility="visible">

            <ImageView
                android:id="@+id/login_image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginStart="0dp"
                android:layout_marginLeft="0dp"
                android:layout_marginTop="0dp"
                android:layout_marginEnd="0dp"
                android:layout_marginRight="0dp"
                android:background="#FAF7F2"
                android:padding="1dp"
                android:scaleType="centerCrop"
                android:src="@drawable/image_login" />

            <TextView
                android:layout_width="78dp"
                android:layout_height="41dp"
                android:layout_alignTop="@+id/login_image"
                android:layout_alignEnd="@+id/login_image"
                android:layout_alignRight="@+id/login_image"
                android:layout_alignBottom="@+id/login_image"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_marginStart="111dp"
                android:layout_marginLeft="111dp"
                android:layout_marginTop="115dp"
                android:layout_marginEnd="113dp"
                android:layout_marginRight="113dp"
                android:layout_marginBottom="137dp"
                android:fontFamily="@font/nanumbarunpenb"
                android:text="로 그 인"
                android:textColor="#0D819D"
                android:textSize="24dp" />

            <ImageButton
                android:id="@+id/image_google_btn"
                android:layout_width="116dp"
                android:layout_height="59dp"
                android:layout_alignStart="@+id/login_image"
                android:layout_alignLeft="@+id/login_image"
                android:layout_alignTop="@+id/login_image"
                android:layout_alignEnd="@+id/login_image"
                android:layout_alignRight="@+id/login_image"
                android:layout_alignBottom="@+id/login_image"
                android:layout_marginStart="91dp"
                android:layout_marginLeft="91dp"
                android:layout_marginTop="194dp"
                android:layout_marginEnd="95dp"
                android:layout_marginRight="95dp"
                android:layout_marginBottom="40dp"
                android:onClick="onClick"
                android:scaleType="centerCrop"
                android:src="@drawable/btn_google_selector" />
        </RelativeLayout>
    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>